apiVersion: v1
kind: Pod
metadata:
  name: movies
  labels:
    app: swiggy
spec:
  containers:
    - name: cont1
      image: deepakram0929/movies:latest
      ports:
        - name: http
          containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: movies-service
spec:
  type: NodePort
  selector:
    app: swiggy
  ports:
    - name: http
      port: 80
      targetPort: 80
      nodePort: 30001
